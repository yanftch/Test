<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#dd3333"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>

    <item
        android:bottom="@dimen/value_x_dp"
        android:left="@dimen/value_x_dp"
        android:right="@dimen/value_x_dp"
        android:top="@dimen/value_x_dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#dddd33"/>
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>


</layer-list>