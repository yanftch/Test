<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.yanftch.test.keyboard.KeyboardActivity">
    <WebView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/webView"></WebView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnHalfActivity"
        android:text="高度定制Activity"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick2Withdraw"
        android:text="去提现"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick2SelectTime"
        android:text="时间选择"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnClick2ChangeStatus"
        android:text="状态切换"/>

    <com.yanftch.test.status.ProgressStatusLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/color_white"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:visibility="gone"
        app:ivLeft_bg="#ff0000"
        app:ivMiddle_bg="#00ff00"
        app:ivRight_bg="#0000ff"
        app:progress_color="#ff0000"
        app:progress_schedule="0"
        app:text_left="leftTime"
        app:text_left_bottom="leftBtm"
        app:text_middle="centerTime"
        app:text_middle_bottom="midBtm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.yanftch.test.other_view.CountdownButton
            android:id="@+id/cdb_register_timer"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="获取验证码"
            android:textAllCaps="false"
            android:textColor="#1179c4"
            android:textSize="18sp"/>
    </LinearLayout>

    <com.yanftch.test.other_view.ClearEditText
        android:id="@+id/tttttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_20_dp"
        android:layout_marginRight="@dimen/value_20_dp"
        android:background="@null"
        android:hint="密码输入"/>

    <com.yanftch.test.other_view.CheckView
        android:id="@+id/che_view"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ver_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <com.yanftch.test.other_view.VerifyCodeView
        android:id="@+id/my_codeview"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_margin="50dp"

        />
</LinearLayout>
