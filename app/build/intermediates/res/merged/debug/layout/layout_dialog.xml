<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape_rectangle"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/value_5_dp"
        android:layout_marginTop="@dimen/value_10_dp"
        >

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_delete"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_5_dp"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/value_16_sp"
        tools:text="title"
        />

    <TextView
        android:id="@+id/dialog_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_10_dp"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="@dimen/value_54_px"
        android:paddingRight="@dimen/value_54_px"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/value_14_sp"
        android:visibility="visible"
        tools:text="this is content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_promotion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20_px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1_px"
            android:background="#e1e1e1"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_textView_left"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/value_5_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16_sp"
                android:visibility="visible"
                tools:text="继续使用"/>

            <TextView
                android:id="@+id/dialog_line"
                android:layout_width="@dimen/value_0.5_dp"
                android:layout_height="match_parent"
                android:background="#e1e1e1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_textView_right"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/value_5_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/value_16_sp"
                tools:text="更新"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>